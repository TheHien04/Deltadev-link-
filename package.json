{
  "name": "the-sunday-bite",
  "version": "3.2.0",
  "description": "Modern website for DeltaDev Link - Premium artisan sausages from Cai Be, Tien Giang. Built with cutting-edge 2026 web technologies + 10 super features.",
  "type": "module",
  "main": "src/js/main.js",
  "scripts": {
    "start": "python3 -m http.server 8000",
    "dev": "python3 -m http.server 8000",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --coverage",
    "lint": "eslint src/js/**/*.js",
    "lint:fix": "eslint src/js/**/*.js --fix",
    "format": "prettier --write \"src/**/*.{js,css,html}\"",
    "format:check": "prettier --check \"src/**/*.{js,css,html}\"",
    "build": "echo 'Build process - bundle and optimize'",
    "analyze": "echo 'Analyze bundle size'",
    "lighthouse": "lighthouse http://localhost:8000 --view",
    "deploy": "echo 'Deploy to production'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/the-sunday-bite"
  },
  "keywords": [
    "lap-xuong",
    "brown-rice-sausage",
    "vietnamese-food",
    "healthy-food",
    "pwa",
    "ecommerce",
    "web-vitals",
    "view-transitions-api",
    "web-share-api",
    "modern-web"
  ],
  "author": "DeltaDev Link Team <support@deltadevlink.com>",
  "license": "MIT",
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@jest/globals": "^29.7.0",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/dom": "^9.3.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^11.7.0",
    "prettier": "^3.2.0"
  },
  "dependencies": {},
  "cdnDependencies": {
    "tailwindcss": "3.4.1",
    "alpinejs": "3.13.5",
    "aos": "3.0.0-beta.6",
    "gsap": "3.12.5",
    "swiper": "11.0.5"
  },
  "modernFeatures": {
    "viewTransitionsAPI": true,
    "webShareAPI": true,
    "webVitals": true,
    "badgingAPI": true,
    "fileSystemAccess": true,
    "containerQueries": true,
    "cssLayers": true,
    "cssHas": true,
    "intersectionObserverV2": true
  }
}
